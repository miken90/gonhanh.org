<Window x:Class="GoNhanh.Views.HotkeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đặt phím tắt"
        Width="320" Height="200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        Background="White"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">

    <StackPanel Margin="16,12,16,16">
        <!-- Instructions -->
        <TextBlock Text="Nhấn tổ hợp phím mới"
                   FontSize="13"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"/>
        <TextBlock Text="(Ctrl, Alt hoặc Shift + phím)"
                   FontSize="10"
                   Foreground="#6B7280"
                   HorizontalAlignment="Center"
                   Margin="0,2,0,10"/>

        <!-- Current shortcut display -->
        <Border Background="#F3F4F6"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="4"
                HorizontalAlignment="Center"
                MinWidth="120"
                Margin="0,0,0,12">
            <TextBlock x:Name="ShortcutDisplay"
                       Text="Đang chờ..."
                       FontSize="14"
                       FontWeight="Medium"
                       HorizontalAlignment="Center"
                       Padding="16,6"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Hủy"
                    Width="65"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="65"
                    Height="36"
                    IsEnabled="False"
                    Click="Ok_Click"
                    Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
    </StackPanel>
</Window>
